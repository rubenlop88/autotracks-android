<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Autotracks" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="InfoTextView">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoDescTextView">
        <item name="android:padding">8dp</item>
    </style>

    <style name="InfoLeyendaTextView">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InfoAutoresTextView" parent="InfoLeyendaTextView">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:drawableLeft">@drawable/circle_black</item>
    </style>

</resources>